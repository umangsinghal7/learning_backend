<body>
    <h1>Edit Comment</h1>
    <form action="/comments/<%= comment.id %>?_method=PATCH" method="POST">
        <section>
            <textarea name="comment" id="comment" cols="20" rows="6"><%= comment.comment %></textarea>
        </section>
        <button>Update Comment</button>
    </form>
</body>
